---
export interface Props {
	text: string;
}

const { text } = Astro.props;
---

<div class="container">
	<input type="submit" value={text} id="login_button" />
</div>
<style>
	.container {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
	}

	input[type="submit"] {
		width: 100%;
		height: 50px;
		border: 1px solid;
		background: #2691d9;
		margin-inline: auto;
		border-radius: 25px;
		font-size: 18px;
		color: #e9f4fb;
		font-weight: 700;
		cursor: pointer;
		outline: none;
	}

	input[type="submit"]:hover {
		border-color: #2691d9;
		transition: 0.5s;
	}

	input[type="submit"]:active {
		border-color: silver;
		transition: 0.5s;
	}
</style>
