---
export interface Props {
    id?: string;
	text: string;
    href: string;
    icon: string;
    selected?: boolean;
}

const { id, text, href, icon, selected } = Astro.props;
---
<link rel="stylesheet" href="../style.css">
<a href={href} class={`item root${selected ? ' selected' : ''}`} id={id ? id : ""}>
    <div class="hbox item">
        <div class="select-indicator"></div>
        <img src={icon} class="icon"/>
        <h2 class="text vbox">{text}</h2>
    </div>
</a>
<style>
    .root {
        text-decoration: none;
        height: fit-content;
        margin: 0px;
        padding: 0px;
    }

    .root.selected .text {
        color: deeppink;
    }

    .root.selected .icon {
        filter: invert(21%) sepia(98%) saturate(3914%) hue-rotate(317deg) brightness(104%) contrast(102%);
    }

    .select-indicator {
        width: 4px;
        min-height: 100%;
        margin-top: 15px;
        margin-bottom: 15px;
        margin-right: 10%;
        background-color: deeppink;
        visibility: hidden;
    }

    .root.selected .select-indicator {
        visibility: visible;
    }

    .item {
        text-align: center;
    }

    .item:hover .text {
        color: deeppink;
    }

    .item:hover .icon {
        filter: invert(21%) sepia(98%) saturate(3914%) hue-rotate(317deg) brightness(104%) contrast(102%);
    }

    .text {
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: #000;
        font-size: 1.2em;
        font-weight: 1500;
        transition: 0.2s;
        font-family: Arial, Helvetica, sans-serif;
    }

    .icon {
        width: 24px;
        min-height: 100%;
        transition: 0.2s;
    }

    @media only screen and (min-width: 900px) {
        .icon {
            margin-right: 10px;
        }
    }

    @media only screen and (max-width: 900px) {
        .icon {
            width: 50%;
            margin-inline: auto;
            margin-bottom: 10%;
        }

        .text {
            display: none !important;
        }

        .item {
            width: 100%;
            justify-content: center;
            align-items: center;
        }

        .select-indicator {
            display: none;
        }
    }
</style>