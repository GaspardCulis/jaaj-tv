---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="formbox">
	<h1>{title}</h1>
	<slot />
</div>
<style>
	.formbox {
		transform: translateX(350%);
		width: 400px;
		background: whitesmoke;
		border-radius: 10px;
		padding: 0 40px;
		padding-bottom: 10px;
		box-sizing: border-box;
	}
	.formbox h1 {
		text-align: center;
		padding-block: 20px;
		border-bottom: 1px solid silver;
	}

	html.is-leaving .formbox {
		transform: translateX(-350%) !important;
		transition: 800ms ease-in;
	}

	html.is-loaded .formbox {
		transform: translateX(0%);
		transition: 800ms ease-out;
	}

	html.is-refreshed .formbox {
		transform: translateX(0%);
		transition: 0;
	}
</style>
