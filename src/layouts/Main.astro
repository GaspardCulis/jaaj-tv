---
import Barba from "../components/Barba.astro";
import Transition from "../components/Transition.astro";
import GradientBackground from "./GradientBackground.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<GradientBackground title={title}>
    <link rel="stylesheet" href="/style/main.css" />
    <main data-barba="container" data-barba-namespace="home" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%;">
        <slot />
    </main>
    <Barba />
</GradientBackground>
